 {% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Book Index</h1>
    
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Year</th>
                <th>Genre</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.publishingYear }}</td>
                <td>{{ book.genre }}</td>
                <td>{{ book.description }}</td>
                <td class="d-flex">
                    <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-sm btn-primary mr-2">Edit</a>
                    <!-- Start of the form for delete button -->
                    <form action="{{ path('book_delete', {'id': book.id}) }}" method="post" onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                    <!-- End of the form for delete button -->
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('book_new') }}" class="btn btn-success">Create new</a>
    </div>
</div>
{% endblock %}
